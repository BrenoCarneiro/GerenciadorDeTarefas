@model GerenciadorDeTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h3>Detalhes da Tarefa</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Título:
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-2">
            Descrição:
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-2">
            Data:
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Data)
        </dt>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Status)
        </dt>
    </dl>
</div>
<a asp-action="Editar" asp-route-id="@Model.Id">Editar</a> |
<a asp-action="Deletar" asp-route-id="@Model.Id">Deletar</a> |
<a asp-action="Index">Voltar</a>